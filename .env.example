# Tool Orchestra Environment Configuration
# Copy this file to .env and fill in your values
# cp .env.example .env

# ===========================================
# LM Studio (Local Models)
# ===========================================
# LM Studio runs an OpenAI-compatible API locally
LM_STUDIO_BASE_URL=http://localhost:1234/v1
LM_STUDIO_API_KEY=lm-studio  # Default, usually not needed

# Model names as loaded in LM Studio
ORCHESTRATOR_MODEL=nemotron-orchestrator-8b
PHI4_MODEL=microsoft-phi-4-mini-instruct

# ===========================================
# Google Gemini API
# ===========================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash-exp

# ===========================================
# LangSmith Tracing (Optional)
# ===========================================
# Get your API key from: https://smith.langchain.com/
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your-langsmith-api-key-here
LANGCHAIN_PROJECT=tool-orchestra

# ===========================================
# Application Settings
# ===========================================
# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Default preferences
DEFAULT_BUDGET=0.5
DEFAULT_PRIVACY=false
DEFAULT_QUALITY=0.5

# Maximum iterations per query (safety limit)
MAX_ITERATIONS=10

# ===========================================
# Vector Store
# ===========================================
VECTOR_STORE_TYPE=faiss  # faiss or chromadb
VECTOR_STORE_PATH=./data/vectorstore

# ===========================================
# Cache Settings
# ===========================================
CACHE_ENABLED=true
CACHE_DIR=.cache/responses
CACHE_TTL=3600  # seconds

# ===========================================
# API Server (Optional)
# ===========================================
API_HOST=0.0.0.0
API_PORT=8000
